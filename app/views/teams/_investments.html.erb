<div class="col-sm-4">
	<div class="sb-team-module">

		<div class="sb-team-module-header">
			<h4 class="sb-team-name">
				<%= link_to investments.team.name, investments.team %> (<%= @click_count[investments.url] %> clicks)
			</h4>
			<p class="sb-team-desc">
				 <strong><%= link_to investments.team.bus_name, investments.team.bus %></strong> - <%= investments.team.description %>
			</p>
		</div>

		<div class="sb-team-logo">
			<%= image_tag investments.team.photo_url, alt: investments.team.name %>
		</div>

		<div class="sb-team-module-footer">
			<span class="label label-primary"><%= number_to_currency(@investor.investments.group(:team_id).sum(:amount)[investments.team_id]) %> Invested</span>
			
			

	        <% if can?(:invest, investments.team) %>
		        <%= link_to new_team_investment_path(investments.team),
		          class: "btn btn-xs btn-success", role: "button" do %>
		          <i class="fa fa-dollar"></i> Invest
		        <% end %>
		      <% elsif can?(:edit_team, investments.team) %>
		        <br />
		        <br />
		        <%= link_to edit_team_path(investments.team),
		          class: "btn btn-xs btn-default", role: "button" do %>
		          Edit your team
		        <% end %>
		      <% end %>
		      <br />
		      <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://game.startupbus.com/" data-text="I just invested in <%= investments.team.name %> (<%= investments.url %>) in the StartupBus game! Play along at" data-via="TheStartupBus" data-size="small" data-related="TheStartupBus" data-hashtags="StartupBus">Tweet</a>
<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>

<div class="fb-share-button" data-href="<%= investments.url %>" data-type="button_count"></div>
		</div>
	</div>
</div>