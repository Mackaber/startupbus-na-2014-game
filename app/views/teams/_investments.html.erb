<div class="col-sm-4">
	<div class="sb-team-module">

		<div class="sb-team-module-header">
			<h4 class="sb-team-name">
				<%= link_to investments.team.name, investments.team %> (<%= @click_count[investments.url] %> clicks)
			</h4>
			<p class="sb-team-desc">
				<%= investments.team.description %>
			</p>
		</div>

		<div class="sb-team-logo">
			<%= image_tag investments.team.photo_url, alt: investments.team.name %>
		</div>

		<div class="sb-team-module-footer">
			score: <%= investments.team.score %>
			total funding: <%= number_to_currency(investments.team.funding) %>
			your investment: <%= number_to_currency investments.amount %>
			Your Short URL: <%= link_to investments.url, investments.url %>
			<%= investments.team.bus_name %>
	        <% if can?(:invest, investments.team) %>
		        <%= link_to new_team_investment_path(investments.team),
		          class: "btn btn-xs btn-success", role: "button" do %>
		          <i class="fa fa-dollar"></i> Invest
		        <% end %>
		      <% elsif can?(:edit_team, investments.team) %>
		        <br />
		        <br />
		        <%= link_to edit_team_path(investments.team),
		          class: "btn btn-xs btn-default", role: "button" do %>
		          Edit your team
		        <% end %>
		      <% end %>
		</div>
	</div>
</div>