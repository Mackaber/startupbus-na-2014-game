<header>
  <div class="row">
  <div class="col-sm-10">
    <%= image_tag @team.photo_url(width: 100, height: 100), alt: @team.name, class: "pull-left" %>

    <h2><%= @team.name %></h2>
    <p><%= @team.description %></p>
  </div>
    <div class="col-sm-2">
      <%= @team.bus_name %>

      <% if can?(:invest, @team) %>
        <%= link_to new_team_investment_path(@team),
          class: "btn btn-sm btn-success", role: "button" do %>
          <i class="fa fa-dollar"></i> Invest
        <% end %>
      <% elsif can?(:edit_team, @team) %>
        <%= link_to edit_team_path(@team),
          class: "btn btn-sm btn-success", role: "button" do %>
          Edit
        <% end %>
      <% end %>
    </div>
  </div>
</header>

<section>
<div class="col-sm-6 col-md-4">
  <div class="thumbnail sb-item-summary">
    <%= image_tag @team.bus_photo_url(width: 50, height: 50), class: "sb-bus-icon" %>
  </div>
</div>


<div class="container">
  <p>Bus: <%= content_tag :b, link_to(@team.bus_name, @team.bus) %></p>
  <p>Score: <%= content_tag :b, @team.score %></p>
</div>

<div class="container">
  <h3>Buspreneurs</h3>
  <%= render @team.buspreneurs, for_team: true %>
</div>

<div class="container">
  <h3>Investments</h3>
  <p>
  Total: <%= content_tag :b, number_to_currency(@team.funding) %>
    (<%= @team.investments.count %>)
  </p>
</div>

<div class="container">
  <h3>Completed Milestones:</h3>
  <%= render @team.milestones %>
</div>



<div class="container">
  <% if can?(:request_milestone, @team) %>
    <li><%= link_to "Submit Milestone Request", new_team_milestone_request_path %></li>
  <% end %>
  <h3>Uncompleted Milestones:</h3>
  <%= render @team.milestones_uncompleted %>

</div>
</div>
</section>