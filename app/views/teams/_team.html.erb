<div class="col-sm-4">
	<div class="sb-team-module">

		<div class="sb-team-module-header">
			<h4 class="sb-team-name">
				<%= link_to team.name, team %>
			</h4>
			<p class="sb-team-desc">
				<%= team.description %>
			</p>
		</div>

		<div class="sb-team-logo">
			<%= image_tag team.photo_url, alt: team.name %>
		</div>

		<div class="sb-team-module-footer">
			score: <%= team.score %>
			funding: <%= number_to_currency(team.funding) %>
			<%= team.bus_name %>
		    <% if can?(:invest, team) %>
		        <%= link_to new_team_investment_path(team),
		          class: "btn btn-xs btn-success", role: "button" do %>
		          <i class="fa fa-dollar"></i> Invest
		        <% end %>
		      <% elsif can?(:edit_team, team) %>
		        <br />
		        <br />
		        <%= link_to edit_team_path(team),
		          class: "btn btn-xs btn-default", role: "button" do %>
		          Edit your team
		        <% end %>
		      <% end %>
		</div>
	</div>
</div>