<h1>Listing Buses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ranking</th>
    </tr>
  </thead>

  <tbody>
    <% @buses.each do |bus| %>
      <tr>
        <td><%= bus.name %></td>
        <td><%= bus.ranking %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bus', new_bus_path %>