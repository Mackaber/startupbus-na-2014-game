
<section class="box">
    <div class="component-box">
    <p>About to invest in <%= @team.name %></p>

<p>You have <%= number_to_currency @investment.investor.bank %> available.</p>

<%= simple_form_for [@team, @investment] do |f| %>
<div class="form-group">
  <%= f.input :amount, :class => "form-control" %>
  </div>
  <div class="form-group">
  <%= f.submit :class => "btn btn-block btn-primary" %>
  </div>
<% end %>


</div>
</section>

