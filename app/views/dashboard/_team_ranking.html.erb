<table>
  <tr>
    <th>Bus</th>
    <th>Bus Ranking</th>
    <th>Team Name</th>
  </tr>
  <% @buses.each do |bus| %>
  <tr>
    <th><%= bus.name %></th>
    <th><%= bus.ranking || 0 %></th>
  </tr>
    <% bus.teams.each do |team| %>
    <tr>
      <td></td>
      <td></td>
      <td><%= team.name %></td>
      <% if current_user.present? && current_user.team_status.nil? %>
        <td><%= link_to 'Join This Team', controller: "users", action: "team_approval_request", team_id: team.id %></td>
      <% end %>
    </tr>
    <% end %>
  <% end %>
</table>

